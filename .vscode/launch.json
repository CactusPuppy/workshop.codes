	"version": "0.2.0",
	"configurations": [
    {
      // Required gems: ruby-debug-base and ruby-debug-ide
      // Required extension: rebornix.ruby
      "name": "Rails server",
      "type": "Ruby",
      "request": "launch",
      "program": "${workspaceRoot}/bin/rails",
      "args": [
        "server"
      ]
    },
    {
			"type": "chrome",
			"request": "launch",
			"name": "Chrome against localhost:3000",
			"url": "http://localhost:3000",
			"webRoot": "${workspaceFolder}/app"
		}
	]
}
