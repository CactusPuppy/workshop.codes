<% content_for :page_title, "Search Snippets | #{ params[:search] }" %>

<div class="heading items-heading">
  <h1>Snippets for <strong><%= params[:search] %></strong> <%= tag.em "- Page #{ params[:page] }" if params[:page] %></h1>

  <div class="ml-auto">
    <%= link_to "Create Snippet", new_snippet_path, class: "button" %>
  </div>
</div>

<main class="items">
  <%= render "snippets" %>

  <%= paginate @snippets %>
</main>
