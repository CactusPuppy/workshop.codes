<section class="collections">
  <div class="heading items-heading mb-1/2">
    <h2 class="mt-0">Other Codes part of <strong><%= @post.collection.title %></strong></h2>
  </div>

  <div class="cards">
    <% @post.collection.posts.visible?.where.not(id: @post.id).limit(9).each do |post| %>
      <%= render "collections/collection_post", post: post %>
    <% end %>
  </div>

  <% if @post.collection.posts.visible?.where.not(id: @post.id).size > 9 %>
    <small class="mt-1/2 mr-1/4"><em><%= "And #{ @post.collection.posts.visible?.where.not(id: @post.id).size - 9 } more..." %></em></small>
  <% end %>

  <%= link_to "View collection", collection_path(@post.collection.nice_url), class: "button button--secondary button--small mt-1/2" %>
</section>
