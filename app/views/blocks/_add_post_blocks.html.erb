<div class="cards">
  <div class="card w-100 h-100" href="#" data-action="create-block" data-content-type="post" data-name="cards">
    <h3 class="card__title mt-0 mb-0">Cards</h3>

    <small class="text-base">Display your codes in a grid made out of "cards"</small>
  </div>

  <%= button_to blocks_path,
      method: :post,
      remote: true,
      params: { block: { content_type: "post", name: "cards" } },
      form: { autocomplete: "off" },
      data: { disable_with: "Loading..." },
      class: "card w-100 h-100" do %>
    <h3 class="card__title mt-0 mb-0">Cards</h3>

    <span class="text-base">Display your codes in a grid made out of "cards"</span>
  <% end %>

  <%= button_to blocks_path,
      method: :post,
      remote: true,
      params: { block: { content_type: "post", name: "carousel_cards" } },
      form: { autocomplete: "off" },
      data: { disable_with: "Loading..." },
      class: "card w-100 h-100" do %>
    <h3 class="card__title mt-0 mb-0">Cards carousel</h3>

    <span class="text-base">Display your codes in a carousel made out of "cards". Similar to the "On fire" carousel on the homepage.</span>
  <% end %>

  <%= button_to blocks_path,
      method: :post,
      remote: true,
      params: { block: { content_type: "post", name: "highlight" } },
      form: { autocomplete: "off" },
      data: { disable_with: "Loading..." },
      class: "card w-100 h-100" do %>
    <h3 class="card__title mt-0 mb-0">Highlight</h3>

    <span class="text-base">Highlight one code which will be displayed with a large image and a custom description.</span>
  <% end %>

  <%= button_to blocks_path,
      method: :post,
      remote: true,
      params: { block: { content_type: "post", name: "collections" } },
      form: { autocomplete: "off" },
      data: { disable_with: "Loading..." },
      class: "card w-100 h-100" do %>
    <h3 class="card__title mt-0 mb-0">Collections</h3>

    <span class="text-base">Select some of your collections to highlight. These will be links to the full collection. Codes in the collection are not shown.</span>
  <% end %>

  <%= button_to blocks_path,
      method: :post,
      remote: true,
      params: { block: { content_type: "post", name: "socials" } },
      form: { autocomplete: "off" },
      data: { disable_with: "Loading..." },
      class: "card w-100 h-100" do %>
    <h3 class="card__title mt-0 mb-0">Socials</h3>

    <span class="text-base">List all of the links you can be found at.</span>
  <% end %>

  <%= button_to blocks_path,
      method: :post,
      remote: true,
      params: { block: { content_type: "post", name: "youtube" } },
      form: { autocomplete: "off" },
      data: { disable_with: "Loading..." },
      class: "card w-100 h-100" do %>
    <h3 class="card__title mt-0 mb-0">YouTube</h3>

    <span class="text-base">Display a YouTube video.</span>
  <% end %>
</div>
