<%= form_for @report, remote: true do |form| %>
  <%= form.hidden_field :concerns_id, value: @post.id %>
  <%= form.hidden_field :concerns_model, value: "post" %>

  <div class="form-group">
    <%= form.label :category, class: "form-label" %>
    <%= form.select :category, options_for_select(report_options), {}, class: "form-select" %>
  </div>

  <div class="form-group mt-1/4">
    <%= form.label :content, "Description", class: "form-label" %>
    <%= form.text_area :content, class: "form-input form-textarea form-textarea--extra-small", placeholder: "Write a short description of is up" %>

    <div class="form-hint mt-1/8 mb-0">Max 1000 characters.</div>
  </div>

  <div data-role="report-alert" class="warning mt-1/2 hidden">Your report has been submitted.</div>

  <%= submit_tag "Submit", class: "button mt-1/2", data: { disable_with: "Submitting..." } %>
<% end %>
