<% content_for :page_title, "Login" %>

<div class="top-offset">
  <div class="form-group-columns">
    <div>
      <h1 class="mt-0">Login</h1>

      <% if flash[:alert] %>
        <div class="warning mt-0"><mark><%= flash[:alert] %></mark></div>
      <% end %>

      <%= form_with url: sessions_path do |form| %>
        <div class="form-group">
          <%= form.label :username, "Username", class: "form-label" %>
          <%= form.text_field :username, placeholder: "Username", class: "form-input" %>
        </div>

        <div class="form-group">
          <%= form.label :password, "Password", class: "form-label" %>
          <%= form.password_field :password, placeholder: "Password", class: "form-input" %>
        </div>

        <div class="form-group checkbox">
          <%= form.check_box :remember_me %>
          <%= form.label :remember_me, "Remember me (uses cookies)" %>
        </div>

        <hr class="small" />

        <%= submit_tag "Submit", class: "button" %>
      <% end %>
    </div>

    <div>
      <h1 class="mt-full mt-sm-0">Create an account</h1>

      <label class="form-label">
        Don't have an account?
      </label>

      <div><%= link_to "Create an account", new_user_path, class: "button button--small" %></div>
    </div>
  </div>
</div>
