<% content_for :page_title, t("account.favorites.title") %>

<%= render "layouts/account", title: t("account.favorites.title") do %>
  <% @favorites.each do |favorite| %>
    <%= render "posts/post", post: favorite.post %>
  <% end %>

  <%= tag.em t("account.favorites.empty") if @favorites.blank? %>

  <%= paginate @favorites %>
<% end %>
