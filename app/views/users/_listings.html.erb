<div class="listings">
  <span class="text-dark"><%= t "account.listings.title" %></span>

  <h2 class="mt-1/8"><%= @recent_listings.size %></h2>

  <div class="listings__item-title text-dark mb-1/8">
    <%= t "account.listings.path" %>
    <span class="text-right"><%= t "account.listings.unique" %></span>
  </div>

  <% if @recent_listings.size > 0 %>
    <% @recent_listings.group_by { |l| l.except("id", "concerns") }
                       .sort_by{ |group, items| items.size }.reverse
                       .each do |group, items| %>
      <div data-toggle-content class="listings__item">
        <div data-action="toggle-content" class="listings__item-title">
          <%= tag.span url_for(group).gsub(".js", "").gsub("%20", " "), title: url_for(group) %>
          <span class="text-right"><%= items.size %></span>
        </div>

        <div data-role="content-to-toggle snippet-container" style="display: none">
          <div class="mb-1/8">
            <small class="text-dark"><%= t "account.listings.results_per_post" %></small>
            <% items.group_by { |i| i["id"] }.each do |grouped_id, posts| %>
              <% post = @posts.find(grouped_id) %>

              <div data-toggle-content class="listings__item-title">
                <small class="tooltip tooltip--top-left">
                  <%= post.code %>

                  <div class="tooltip__content">
                    <%= post.title %>
                  </div>
                </small>
                <small class="text-right"><%= posts.size %></small>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="mt-1/4 text-dark">
      <em><%= t "account.listings.empty" %></em>
    </div>
  <% end %>
</div>
