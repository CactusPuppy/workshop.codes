<h2>Collections made by <%= tag.strong @user.username.split("#")[0] %></h2>

<div class="cards">
  <% @user.collections.each do |collection| %>
    <div class="card">
      <%= link_to collection.title, collection_path(collection.nice_url), class: "card__title" %>

      <%= link_to "View collection", collection_path(collection.nice_url), class: "button button--secondary mt-1/8" %>
    </div>
  <% end %>
</div>

<%= tag.em "#{ @user.username.split("#")[0] } has not yet created any collections" if @user.collections.none? %>
