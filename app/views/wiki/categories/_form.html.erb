<%= form_for @category, remote: true do |form| %>
  <div class="form-group">
    <%= form.text_field :title, class: "form-input", placeholder: "Category title" %>
  </div>

  <div class="form-group">
    <%= form.text_area :description, class: "form-input form-textarea form-textarea--extra-small", placeholder: "Short description" %>
  </div>

  <%= submit_tag "Submit", class: "button mt-half" %>
<% end %>
