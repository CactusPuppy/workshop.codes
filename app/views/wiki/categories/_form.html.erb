<%= form_for @category, remote: true do |form| %>
  <div class="form-group">
    <%= form.text_field :title, class: "form-input", placeholder: "Category title" %>
  </div>

  <div class="form-group">
    <%= form.text_area :description, class: "form-input form-textarea form-textarea--extra-small", placeholder: "Short description" %>
  </div>

  <%= submit_tag "Submit", class: "button mt-quarter" %>

  <% if @category.persisted? && @category.articles.count == 0 %>
    <div>
      <%= link_to "Destroy", wiki_category_path(@category.id),
                  class: "button button--link text-red",
                  method: :delete,
                  data: { confirm: "Are you sure you want to destroy this category? This cannot be undone." } %>
    </div>
  <% end %>
<% end %>
