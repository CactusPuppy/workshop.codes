<div class="items mt-1/1">
  <% if @articles.any? %>
    <%= render @articles %>

    <% if @articles.count == PAGE_SIZE %>
      <div class="infinite-scroll" data-role="infinite-scroll-marker" data-url="<%= request.original_url %>"></div>

      <div class="flex justify-center" data-role="infinite-scroll-backup-pagination">
        <%= paginate @articles %>
      </div>
    <% end %>
  <% else %>
    <p>No results</p>
  <% end %>
</div>
