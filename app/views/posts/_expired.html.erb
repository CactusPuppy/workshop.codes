<div class="warning warning--mild mt-1/4 mb-1/4 pt-1/8 pb-1/8">
  <p class="mb-0">âš  <mark><%= t("posts.show.expired.title") %></mark></p>
  <p class="mt-0"><small><%= t("posts.show.expired.content") %></small></p>

  <% if current_user == @post.user %>
    <p class="text-dark"><small><%= t("posts.show.immortal.content") %></small></p>

    <%= button_to t("posts.show.immortal.button"),
        immortalise_post_path,
        method: :post,
        params: { code: @post.code },
        data: { disable_with: t("global.processing"), confirm: "Are you sure? Check your code before clicking this button. This action cannot be undone." },
        form: { autocomplete: "off" },
        class: "button button--secondary mb-1/4" %>
  <% end %>
</div>
