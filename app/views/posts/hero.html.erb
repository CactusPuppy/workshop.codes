<% content_for :page_title, "#{ params[:hero].gsub("-", " ").humanize } #{ "| Page #{ params[:page] }" if params[:page] }" %>

<div class="heading mb-0">
  <h1>Workshop Codes with <strong><%= params[:hero].gsub("-", " ").split.map(&:capitalize).join(" ") %></strong> <%= tag.em "- Page #{ params[:page] }" if params[:page] %></h1>
</div>

<div class="item item--bottom mt-0 mb-full">
  <div class="item__details">
    <div class="item__details-item">
      Sort by |
      <%= link_to "Recent", hero_path(params[:hero]), class: "#{ "text-white" if params[:sort].blank? }" %> |
      <%= link_to "On fire", hero_path(params[:hero], "on-fire"), class: "#{ "text-white" unless params[:sort].blank? }" %>
    </div>
  </div>
</div>

<main class="items">
  <%= render "posts" %>

  <%= paginate @posts %>
</main>
