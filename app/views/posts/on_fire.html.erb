<% content_for :page_title, "#{ t("navigation.on_fire") } #{ "| Page #{ params[:page] }" if params[:page] }" %>

<div class="heading">
  <h1>
    <%= inline_svg_tag "icons/icon-onfire.svg", class: "title-icon" %>
    <%= t(".title_html") %> <%= tag.small "- Page #{ params[:page] }" if params[:page] %>
  </h1>
</div>

<% unless current_user.present? %>
  <div class="adv-ad mt-1/1 mb-1/1">
    <%= render "application/banners/ad" %>
  </div>
<% end %>

<%= render "posts" %>
