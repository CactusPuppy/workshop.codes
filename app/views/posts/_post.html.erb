<% cache "#{ post.id }_#{ post.updated_at }_#{ current_user.present? }_#{ current_user && current_user.favorites.find_by_post_id(post.id).present?  }" do %>
  <article class="item">
    <div class="item__title">
      <%= link_to post.title, post_path(post.code) %>

      <%= render "favorites/form", post: post %>
    </div>

    <div class="item__code">
      <%= inline_svg "icons/icon-copy.svg", class: "copy-trigger", data: { action: "copy-to-clipboard", target: post.code } %>

      <span class="copy">
        <span data-copy="<%= post.code %>"><%= post.code %></span>
      </span>
    </div>

    <div class="item__details">
      <div class="item__details-item">
        By |
        <%= link_to post.user.username, user_path(post.user.username) %>
      </div>

      <div class="item__details-item">
        Categories |

        <% JSON.parse(post.categories).each do |category| %>
          <%= link_to category, category_path(to_slug(category)) %><%= "," unless category == JSON.parse(post.categories).last %>
        <% end %>
      </div>

      <% if post.tags.present? %>
        <div class="item__details-item">
          Tags |

          <% post.tags.tr("[]", "").split(/,\s*/).take(5).each do |tag| %>
            <%= link_to tag.downcase, search_path(tag.downcase), class: "tag" %>
          <% end %>

          <% post_length = post.tags.tr("[]", "").split(/,\s*/).length %>

          <% if post_length > 5 %>
            <small>+<%= post_length - 5 %></small>
          <% end %>
        </div>
      <% end %>

      <%= post.created_at < 6.months.ago %>

      <% if (post.revisions.any? && post.revisions.last.created_at < 6.months.ago) || post.updated_at < 6.months.ago %>
        <div class="item__details-item">
          <div class="tooltip">
            âš  Possibly expired

            <div class="tooltip__content">
              <strong>This code is over 6 months old.</strong> This might mean the code has expired and will no longer function.
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <%= link_to post_path(post.code), class: "item__action" do %>
      View Item

      <%= inline_svg "icons/icon-right-arrow.svg" %>
    <% end %>
  </article>
<% end %>
