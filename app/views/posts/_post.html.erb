<% cache_unless current_user, post do %>
  <article class="item">
    <% cache [post, "title_thumbnail"] do %>
      <%= render "posts/thumbnail", post: post %>

      <div class="item__title">
        <%= link_to post.title, post_path(post.code) %>
      </div>
    <% end %>

    <div class="item__favorite">
      <%= render "favorites/form", post: post %>
    </div>

    <% cache [post, "information"] do %>
      <div class="item__code" data-action="copy-to-clipboard" data-target="<%= post.code %>">
        <%= inline_svg_tag "icons/icon-copy.svg", class: "copy-trigger" %>

        <span class="copy">
          <span data-copy="<%= post.code %>" data-track-copy><%= post.code %></span>
        </span>
      </div>

      <div class="item__details">
        <div class="item__details-item">
          By |
          <%= link_to post.user.username.split("#")[0], user_profile_path(post.user) %>
        </div>

        <div class="item__details-item">
          Categories |

          <% post.categories.each do |category| %>
            <%= link_to category, filter_path(category: to_slug(category)) %><%= "," unless category == post.categories.last %>
          <% end %>
        </div>

        <% if post.revisions.last && post.revisions.last.created_at < 6.months.ago %>
          <div class="item__details-item">
            <div class="tooltip">
              âš  Possibly expired

              <div class="tooltip__content">
                <strong>This code is over 6 months old.</strong> This might mean the code has expired and will no longer function.
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </article>
<% end %>

<% if local_assigns[:post_counter] && post_counter == 9 && controller_name != "profiles" %>
  <div class="adv-ad">
    <hr class="mt-0 mb-0">
    <%= render "application/banners/affiliate_ad" %>
  </div>
<% end %>
