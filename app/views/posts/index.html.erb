<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Code</th>
      <th>Title</th>
      <th>Description</th>
      <th>Categories</th>
      <th>Tags</th>
      <th>Heroes</th>
      <th>Maps</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user_id %></td>
        <td><%= post.code %></td>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= post.categories %></td>
        <td><%= post.tags %></td>
        <td><%= post.heroes %></td>
        <td><%= post.maps %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
