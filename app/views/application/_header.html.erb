<header class="header">
  <%= link_to root_path do %>
    <picture>
      <source srcset="<%= image_url "logo.webp" %> 2x, <%= image_url "logo.webp" %> 1x" type="image/webp">
      <source srcset="<%= image_url "logo_x2.png" %> 2x, <%= image_url "logo.png" %> 1x" type="image/jpeg">
      <%= image_tag "logo.png", class: "logo", alt: "Workshop.codes Logo" %>
    </picture>
  <% end %>

  <nav class="header__navigation">
    <%= link_to image_tag("layout/navigation_item_codes.png"), posts_path, class: "header__item #{ "header__item--active" if controller_name == "posts" }" %>
    <%= link_to image_tag("layout/navigation_item_snippets.png"), snippets_path, class: "header__item #{ "header__item--active"if controller_name == "snippets" }" %>
  </nav>
</header>
