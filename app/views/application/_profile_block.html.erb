<div class="profile-block">
  <div class="mr-1/4">
    <% if current_user %>
      <%= link_to current_user.username.split("#")[0], account_path, class: "profile-block__action" %>
    <% else %>
      <%= link_to "Login", login_path, class: "profile-block__action" %>
    <% end %>
  </div>

  <%= link_to t("navigation.create"), current_user.present? ? new_post_path : login_path, class: "button profile-block__create mr-1/4" %>

  <div class="dropdown" data-dropdown>
    <%= link_to I18n.locale, "", class: "dropdown__toggle button button--secondary button--thin button--small", data: { action: "toggle-dropdown" } %>

    <div class="dropdown__content" data-dropdown-content>
      <%= link_to "en - English", url_for(locale: nil), class: "dropdown__item" %>
      <%= link_to "ko - 한국어", url_for(locale: :ko), class: "dropdown__item" %>
      <%= link_to "ja - 日本語", url_for(locale: :ja), class: "dropdown__item" %>
      <%= link_to "Mixed", url_for(locale: :mixed), class: "dropdown__item" %>
    </div>
  </div>
</div>
