<% if yield(:og_summary_small) == "true" %>
  <meta name="twitter:card" content="summary" />
<% else %>
  <meta name="twitter:card" content="summary_large_image" />
<% end %>
<meta property="og:title" content="<%= yield(:page_title) != "" ? yield(:page_title) + " | Workshop.codes" : "Workshop.codes | Overwatch Workshop Codes to Discover and Share" %>">
<% if yield(:og_image) != "" %>
  <meta property="og:image" content="<%= yield(:og_image) %>">
  <meta property="og:image:width" content="900">
  <meta property="og:image:height" content="500">
<% else %>
  <meta property="og:image" content="<%= image_url "og-image#{ "-wiki" if is_wiki? }.jpg" %>">
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
<% end %>
<% if yield(:og_description) != "" %>
  <meta name="description" content="<%= yield(:og_description) %>">
  <meta property="og:description" content="<%= yield(:og_description) %>">
<% end %>
